[recheckwatch]
pickle_dir=/var/lib/recheckwatch
template_dir=/var/lib/recheckwatch
output_file=/var/www/recheckwatch/rechecks.html
age=30 ; days
closed_age=5 ; days
regex=(?i)^(Patch Set [0-9]+:)?( [\w\\+-]*)*(\n\n)?\s*(?P<verb>recheck|reverify) (?:bug|lp)[\s#:]*(?P<bugno>\d+)$

[gerrit]
host=<%= gerrit_server %>
user=<%= gerrit_user %>
key=/var/lib/recheckwatch/ssh/id_rsa
port=29418
