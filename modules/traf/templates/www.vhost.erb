NameVirtualHost *:80
<VirtualHost *:80>
  ServerName <%= srvname %>
<% if serveraliases.is_a? Array -%>
<% serveraliases.each do |name| -%><%= "  ServerAlias #{name}\n" %><% end -%>
<% elsif serveraliases != '' -%>
<%= " ServerAlias #{serveraliases}" %>
<% end -%>

  Redirect permanent / http://www.hp.com/go/trafodion
</VirtualHost>
