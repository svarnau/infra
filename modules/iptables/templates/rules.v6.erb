*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:trafodion-INPUT - [0:0]
-A INPUT -j trafodion-INPUT
-A trafodion-INPUT -i lo -j ACCEPT
-A trafodion-INPUT -p icmpv6 -j ACCEPT
-A trafodion-INPUT -m state --state ESTABLISHED,RELATED -j ACCEPT
# SSH from anywhere
-A trafodion-INPUT -m state --state NEW -m tcp -p tcp --dport 22 -j ACCEPT
# SNMP from trafodion cacti
#-A trafodion-INPUT -m udp -p udp --dport 161 -s 2001:4800:780d:0509:3bc3:d7f6:ff04:49de -j ACCEPT
# Public TCP ports
<% public_tcp_ports.each do |port| -%>
-A trafodion-INPUT -m state --state NEW -m tcp -p tcp --dport <%= port %> -j ACCEPT
<% end -%>
# Public UDP ports
<% public_udp_ports.each do |port| -%>
-A trafodion-INPUT -m udp -p udp --dport <%= port %> -j ACCEPT
<% end -%>
# Per-host rules
<% rules6.each do |rule| -%>
-A trafodion-INPUT <%= rule %>
<% end -%>
-A trafodion-INPUT -j REJECT --reject-with icmp6-adm-prohibited
COMMIT
